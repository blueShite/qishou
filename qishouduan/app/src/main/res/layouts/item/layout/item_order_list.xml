<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/appwhite"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:background="@color/ColorBlack"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_orderList_item_orderNum"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:text="订单号:"
        android:textColor="@color/ColorTextBlcak"
        android:textSize="@dimen/mainText"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/text_orderList_item_address"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:textColor="@color/ColorTextBlcak"
        android:textSize="@dimen/mainText"
        android:text="送餐地址:"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/text_orderList_item_name"/>

    <TextView
        android:id="@+id/text_orderList_item_orderTime"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:textColor="@color/ColorTextBlcak"
        android:textSize="@dimen/mainText"
        android:text="下单时间:"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/text_orderList_item_address"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/text_orderList_item_footTime"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="用餐时间:"
        android:textColor="@color/ColorTextBlcak"
        android:textSize="@dimen/mainText"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/text_orderList_item_orderTime"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp"
        app:layout_constraintVertical_bias="0.0"/>

    <TextView
        android:id="@+id/text_orderList_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="¥33.3"
        android:textColor="@color/ColorTextDrank"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/imageView"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.51"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/icon_arrow"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"/>

    <TextView
        android:id="@+id/text_orderList_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户名称:"
        android:textColor="@color/ColorTextBlcak"
        android:textSize="@dimen/mainText"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/text_orderList_item_orderNum"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"/>
</android.support.constraint.ConstraintLayout>